<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lxysss.ocrbi.activity.WordinfActivity">

    <include layout="@layout/word_ing_toolbar"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/colorBgGrey" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/word_inf_word"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@drawable/word"
            android:textSize="60sp"
            android:textColor="#000"
            android:text="中"/>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="拼音"/>
            <TextView
                android:id="@+id/word_inf_pinyin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="zhong"/>

        </LinearLayout>

            <ImageView
                android:id="@+id/word_inf_yuyin"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="bottom"
                android:background="@drawable/yuyin"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="笔画     "/>
            <TextView
                android:id="@+id/word_inf_bihua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="部首     "/>
            <TextView
                android:id="@+id/word_inf_bushou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:text="中"/>
        </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="【释义】"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/cartoon_word"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/my"/>
    </LinearLayout>


            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


        <TextView
            android:id="@+id/word_inf_yisi1"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="再三嘱咐：叮嘱。叮咛（亦作“丁宁”）。"/>
        <TextView
            android:id="@+id/word_inf_yisi2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="追问：叮问。"/>
        <TextView
            android:id="@+id/word_inf_yisi3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="蚊虫等用针形口器吸食：被蚊子叮了一口。"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:text="描一描"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/word_inf_gif"
                    android:layout_marginTop="5dp"
                    android:layout_width="200dp"
                    android:layout_gravity="center"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                     />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
