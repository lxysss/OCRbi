<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/uset_recommend"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#236542"
            android:textSize="16sp"
            android:text="您的识字数测试结果为："/>
        <TextView
            android:id="@+id/user_word_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#236542"
            android:textSize="18sp"
            android:text="2333"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/re_test_word"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:src="@drawable/reload"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="150dp"
                android:id="@+id/shijituijian"
                android:text="书籍推荐"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/text_view_shape_book"
                android:layout_height="30dp"
                android:layout_gravity="center"
               />
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <Button
            android:layout_width="150dp"
            android:id="@+id/meirijinping"

            android:text="每日精品"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/text_view_shape_book"
            android:layout_height="30dp"
            />
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/ic_gray_background" />
   <FrameLayout
       android:id="@+id/recommend_chage"
       android:layout_marginTop="95dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

   </FrameLayout>

</FrameLayout>
