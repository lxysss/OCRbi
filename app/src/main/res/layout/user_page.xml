<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<LinearLayout
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <ImageView
       android:id="@+id/get_image"
       android:layout_marginTop="10dp"
       android:layout_width="35dp"
       android:layout_height="35dp"
       android:layout_gravity="right"
       android:layout_marginRight="20dp"
       android:background="@drawable/photo_2"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_marginLeft="20dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/add_pic"
        app:civ_border_color="#5e74e1"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_marginLeft="30dp"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lxy"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_gravity="bottom"
        android:layout_marginRight="10dp"
        android:layout_height="80dp"
        android:src="@drawable/wugui"/>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_gray_background"/>

    <LinearLayout
        android:background="@drawable/layout_selecter"
        android:clickable="true"
        android:id="@+id/go_to_book"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/book_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书架管理"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:background="@drawable/ic_gray_background" />
    <LinearLayout
        android:id="@+id/scan_book"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selecter"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/scan_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码识书"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:background="@drawable/ic_gray_background" />
    <LinearLayout
        android:id="@+id/search_shuku_book"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selecter"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/find"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索书籍"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/enter"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_gray_background"/>
    <LinearLayout
        android:id="@+id/go_to_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selecter"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/user_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/enter"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:background="@drawable/ic_gray_background" />
    <LinearLayout
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selecter"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/set"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/enter"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_gray_background"/>
    <LinearLayout
        android:id="@+id/btn_exit_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selecter"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/logout"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/enter"/>
    </LinearLayout>
</LinearLayout>