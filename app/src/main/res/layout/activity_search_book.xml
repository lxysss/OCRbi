<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include layout="@layout/book_search_toolbar"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/colorBgGrey" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:textColor="#000"
            android:text="这里可以搜索想看的书籍"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@drawable/jinyu"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_gray_background"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/search_book_favorite_1"
            android:layout_width="270dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:hint="请输入书籍名"
            android:textSize="12sp"
            android:layout_height="35dp"
            android:background="@drawable/edit_text_shape"/>
        <ImageView
            android:id="@+id/search_book_favorite_search_1"
            android:layout_width="35dp"
            android:src="@drawable/find"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_gray_background"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/book_search_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
